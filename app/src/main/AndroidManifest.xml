<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.studip.unofficial_app">
    
    <!-- used to connect to the Stud.IP server -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- used to write to the downloads folder -->
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28"
        tools:ignore="ScopedStorage" />
    
    <!-- used to not load images when on mobile data -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- used for the BigBlueButton video conferences -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    
    <queries>
        <intent>
            <action android:name="ACTION_ACTION_OPEN_DOCUMENT" />
            <data android:mimeType="*/*" />
        </intent>
    </queries>

    <application
        android:name=".App"
        android:allowBackup="false"
        android:icon="@drawable/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.HelpActivity" />

        <meta-data
            android:name="android.webkit.WebView.MetricsOptOut"
            android:value="true" />
        
        <activity android:name=".ui.CrashActivity" android:exported="false" />
        <activity android:name=".ui.SettingsActivity" android:exported="false" />
        <activity android:name=".ui.LoginActivity" android:exported="false" />
        <activity android:name=".ui.ServerSelectActivity" android:exported="false" />
        <activity android:name=".ui.plugins.MeetingsActivity" android:exported="false" />
        <activity
            android:name=".ui.HomeActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.DeepLinkActivity"
            android:label="@string/app_name"
            android:launchMode="singleInstance"
            android:taskAffinity=""
            android:theme="@android:style/Theme.NoDisplay">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- The intent filter has to be this general, because the hostnames of all possible Stud.IP installations isn't known -->
                <data android:scheme="https" />
                <data android:scheme="http" />
            </intent-filter>
        </activity>
        
        
        <receiver android:name=".LocaleChangedBroadcastReceiver" android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.LOCALE_CHANGED"/>
            </intent-filter>
        </receiver>
        
        <provider
            android:name=".documentsprovider.DocumentsProvider"
            android:authorities="org.studip.unofficial_app.documents"
            android:grantUriPermissions="true"
            android:exported="true"
            android:permission="android.permission.MANAGE_DOCUMENTS">
            <intent-filter>
                <action android:name="android.content.action.DOCUMENTS_PROVIDER"/>
            </intent-filter>
        </provider>
        
        
    </application>

</manifest>